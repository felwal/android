<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- base theme -->

    <style name="Theme.Felwal.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <!-- custom attrs -->
        <item name="sortSheetUpArrow">@drawable/ic_arrow_up_24</item>
        <item name="sortSheetDownArrow">@drawable/ic_arrow_down_24</item>
        <item name="sortSheetHighlightColor">?colorPrimary</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- remove the MaterialComponents automatic brightening of surface color in dark mode -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- type -->
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

        <!-- theme/style -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Felwal.Dialog</item>
    </style>

    <!-- light theme -->

    <style name="Theme.Felwal" parent="Theme.Felwal.Base">
        <!-- background -->
        <item name="android:colorBackground">@color/felwal_background_lt</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- surface -->
        <item name="colorSurface">@color/felwal_surface_lt</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

</resources>