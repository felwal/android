<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- base theme -->

    <style name="Theme.Felwal.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <!-- text -->
        <item name="android:textColorTertiary">@drawable/fw_selector_color_text_tertiary</item>

        <!-- sheet -->
        <item name="fw_sortSheetAscendingIcon">@drawable/fw_ic_arrow_up_24</item>
        <item name="fw_sortSheetDescendingIcon">@drawable/fw_ic_arrow_down_24</item>
        <item name="fw_sortSheetHighlightColor">?colorControlActivated</item>

        <!-- dialog -->
        <item name="fw_dialogTitleTextViewStyle">@style/Widget.Felwal.TextView.Dialog.Title</item>
        <item name="fw_dialogBodyTextViewStyle">@style/Widget.Felwal.TextView.Dialog.Body</item>
        <item name="fw_dialogItemTextViewStyle">@style/Widget.Felwal.TextView.Dialog.Item</item>
        <item name="fw_dialogTextFieldStyle">@style/Widget.Felwal.TextInputLayout.FilledBox.Dense</item>
        <item name="fw_dialogTextFieldTextAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="fw_colorDialogSelectedIcon">@drawable/fw_ic_check_24</item>

        <!-- settings -->
        <item name="fw_settingHeaderTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="fw_settingItemTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="fw_settingDescTextAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="fw_settingItemIconTint">?colorControlNormal</item>
        <item name="fw_settingItemOpenActivityIcon">@drawable/fw_ic_navigate_next_24</item>
        <item name="fw_settingItemOpenLinkIcon">@drawable/fw_ic_launch_24</item>

        <!-- remove action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- remove MaterialComponents automatic brightening of surface color in dark mode;
        we want to control surface colors ourselves. -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- mirror appcompat/android double attrs -->
        <item name="android:colorPrimary">?colorPrimary</item>
        <item name="android:colorPrimaryDark">?colorPrimaryDark</item>
        <item name="android:colorSecondary">?colorSecondary</item>
        <item name="android:colorAccent">?colorAccent</item>
        <item name="android:colorControlNormal">?colorControlNormal</item>
        <item name="android:colorControlActivated">?colorControlActivated</item>
        <item name="android:colorControlHighlight">?colorControlHighlight</item>
        <item name="android:popupMenuStyle">?popupMenuStyle</item>
        <item name="android:listPopupWindowStyle">?listPopupWindowStyle</item>
        <item name="android:actionOverflowMenuStyle">?actionOverflowMenuStyle</item>

        <!-- mirror same-purpose attrs -->
        <item name="colorAccent">?colorSecondary</item>
        <item name="android:colorBackgroundFloating">?colorSurface</item>

        <!-- mirror similar-purpose attrs as defaults -->
        <item name="colorPrimaryDark">?colorPrimary</item>
        <item name="colorPrimaryVariant">?colorPrimary</item>
        <item name="colorSecondaryVariant">?colorSecondary</item>

        <!-- type -->
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

        <!-- shape -->
        <item name="fw_cornerSizeSmallComponent">@dimen/fw_corner_radius_small_component</item>
        <item name="fw_cornerSizeMediumComponent">@dimen/fw_corner_radius_medium_component</item>
        <item name="fw_cornerSizeLargeComponent">@dimen/fw_corner_radius_large_component</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Felwal.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Felwal.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Felwal.LargeComponent</item>

        <!-- popup style -->
        <item name="popupMenuStyle">@style/Widget.Felwal.PopupMenu</item>
        <item name="listPopupWindowStyle">@style/Widget.Felwal.PopupMenu.ListPopupWindow</item>
        <item name="android:contextPopupMenuStyle">@style/Widget.Felwal.PopupMenu.ContextMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.Felwal.PopupMenu.Overflow</item>

        <!-- widget style -->
        <item name="sliderStyle">@style/Widget.Felwal.Slider</item>
        <item name="checkboxStyle">@style/Widget.Felwal.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.Felwal.RadioButton</item>

        <!-- dialog theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Felwal.Dialog</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Felwal.Sheet</item>

        <!-- widget theme -->
        <item name="fw_floatingActionMenuTheme">@style/ThemeOverlay.Felwal.Fam</item>
    </style>

    <!-- light theme -->

    <style name="Theme.Felwal" parent="Theme.Felwal.Base">
        <!-- background -->
        <item name="android:colorBackground">@color/fw_felwal_background_lt</item>
        <item name="colorOnBackground">@color/fw_black</item>
        <item name="colorSurface">@color/fw_felwal_surface_lt</item>
        <item name="colorOnSurface">@color/fw_black</item>

        <item name="android:listDivider">@color/fw_felwal_divider_lt</item>
        <!-- TODO: remove? -->
        <item name="strokeColor">@color/fw_felwal_divider_lt</item>
    </style>

</resources>