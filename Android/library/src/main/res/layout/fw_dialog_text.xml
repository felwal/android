<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/fw_spacing_dialog_horizontal_textfield"
    android:paddingTop="@dimen/fw_spacing_dialog_top_textfield"
    android:paddingBottom="@dimen/fw_spacing_dialog_bottom_textfield">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fw_tf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?fw_dialogTextFieldStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>