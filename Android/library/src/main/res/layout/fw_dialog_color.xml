<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/fw_spacing_tiny">

    <GridView
        android:id="@+id/fw_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:columnWidth="@dimen/fw_diameter_color"
        android:horizontalSpacing="@dimen/fw_spacing_dialog_horizontal_color"
        android:verticalSpacing="@dimen/fw_spacing_dialog_vertical_color"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidth"
        android:paddingHorizontal="@dimen/fw_spacing_dialog_horizontal"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        app:layout_constraintBottom_toTopOf="@+id/fw_v_divider_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fw_v_divider_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fw_height_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.Felwal.Divider" />

    <View
        android:id="@+id/fw_v_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fw_height_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Felwal.Divider" />

</androidx.constraintlayout.widget.ConstraintLayout>