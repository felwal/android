<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fw_iv_color"
        android:layout_width="@dimen/fw_diameter_color"
        android:layout_height="@dimen/fw_diameter_color"
        android:layout_marginVertical="@dimen/fw_spacing_tiny"
        android:background="@drawable/fw_ripple_oval"
        android:backgroundTint="?colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?colorSurface"
        tools:src="@drawable/fw_ic_check_24" />

</androidx.constraintlayout.widget.ConstraintLayout>