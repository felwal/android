<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Sample" parent="Theme.Felwal">
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>

        <!-- action bar -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- background -->
        <item name="android:colorBackground">@color/felwal_background_lt</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- surface -->
        <item name="colorSurface">@color/felwal_surface_lt</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- primary -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- secondary -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

</resources>