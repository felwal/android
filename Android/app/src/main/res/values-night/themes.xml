<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Sample" parent="Theme.Felwal">
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>

        <!-- action bar -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- background -->
        <item name="android:colorBackground">@color/default_background_dk</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- surface -->
        <item name="colorSurface">@color/default_surface_dk</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- primary -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- secondary -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

</resources>