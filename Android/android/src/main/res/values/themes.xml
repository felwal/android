<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Felwal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="sortSheetUpArrow">@drawable/ic_arrow_up_24</item>
        <item name="sortSheetDownArrow">@drawable/ic_arrow_down_24</item>
        <item name="sortSheetHighlightColor">?colorPrimary</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- remove the MaterialComponents automatic brightening of surface color in dark mode -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- type -->
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

        <!-- theme/style -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Felwal.Dialog</item>
    </style>

</resources>